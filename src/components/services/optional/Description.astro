    <!-- First Row: Sala de Velación -->
    <div class="relative mb-16">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-0 items-stretch">
        <!-- Left: Text Card (overlapping) -->
        <div class="relative lg:-mr-2 lg:mb-8">
          <div class="bg-white rounded-2xl p-6 lg:p-8 shadow-xl h-full flex flex-col justify-center lg:min-h-[450px]">
            <p class="text-sm lg:text-xl text-justify text-dark-gray/80 leading-fit">
