<section class="py-16 bg-white">
  <div class="container mx-auto px-6 max-w-7xl">
    <div class="text-center mb-12">
      <h2 class="text-2xl lg:text-3xl font-bold text-dark-gray mb-4">
        Servicios que ofrecemos
      </h2>
      <!-- Línea separadora -->
      <div class="flex justify-center py-2">
        <div class="w-32 h-0.5 bg-light-gray"></div>
      </div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6">
      <!-- Row 1 -->
      <!-- Pre-Necesidad -->
      <div class="relative group cursor-pointer h-[350px] sm:h-[400px] lg:h-[450px] [perspective:1000px]" onclick="window.location.href='/pre-necesidad'">
        <div class="relative h-full w-full transition-transform duration-700 [transform-style:preserve-3d] group-hover:[transform:rotateY(180deg)]">
          <!-- Front Side -->
          <div class="absolute inset-0 h-full w-full rounded-md overflow-hidden [backface-visibility:hidden]">
            <img 
              src="/images/home/Pre-necesidad - card.webp" 
              alt="Pre-Necesidad" 
              class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-dark-gray/70"></div>
            
            <!-- Content overlay -->
            <div class="absolute inset-0 flex flex-col justify-center items-center p-6">
              <h3 class="text-white text-xl lg:text-2xl font-bold mb-2">Pre-Necesidad</h3>
              
              <!-- Green button bottom right with diagonal down-right arrow -->
              <div class="absolute bottom-1 right-1">
                <div class="w-10 h-10 bg-green-primary rounded flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7l10 10M17 7v10H7"></path>
                  </svg>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Back Side -->
          <div class="absolute inset-0 h-full w-full rounded-md bg-green-primary [backface-visibility:hidden] [transform:rotateY(180deg)] p-8 flex flex-col justify-center">
            <!-- Title and description centered -->
            <div class="text-center">
              <h3 class="text-white text-2xl font-bold mb-4">Pre-Necesidad</h3>
              <p class="text-white text-sm leading-relaxed max-w-xs">
                Adquirir un plan exequial de forma anticipada brinda tranquilidad a tu familia en los momentos difíciles.
              </p>
            </div>
            
            <!-- Button bottom right -->
            <div class="absolute bottom-8 right-8">
              <a href="/pre-necesidad" class="text-white font-semibold flex items-center gap-2 hover:text-green-dark hover:scale-110 transition-all duration-300" aria-label="Conoce más sobre pre necesidad">
                Contáctanos
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 17L17 7M17 7H7M17 7V17"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>

