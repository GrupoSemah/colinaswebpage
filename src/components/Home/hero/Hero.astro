<section class="relative bg-green-dark rounded-3xl mx-4 sm:mx-6 overflow-hidden h-[calc(100dvh-120px)]">
  <!-- Background Video -->
  <div class="absolute inset-0">
    <video 
      autoplay 
      muted 
      loop 
      playsinline
      preload="metadata"
      class="w-full h-full object-cover"
      poster="/images/home/hero.webp"
    >
      <source src="/videos/herovideo1.webm" type="video/webm">
      <!-- Fallback image for browsers that don't support video -->
      <img 
        src="/images/home/hero.webp" 
        alt="Vista aérea del cementerio Colinas de la Paz"
        class="w-full h-full object-cover"
      />
    </video>
    <div class="absolute inset-0 bg-black/40"></div>
  </div>
  
  <!-- Content Container -->
  <div class="relative z-10 h-full flex items-center justify-start text-left px-6 md:px-8 lg:pl-16">
    <div class="w-full max-w-2xl">
      <h1 class="text-white text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-4 md:mb-6">
        Cementerio y funeraria
        <br class="hidden sm:block">
        <span class="sm:hidden"> </span>privada en Panamá Oeste
      </h1>
      <p class="text-white text-base sm:text-lg md:text-xl leading-relaxed">
        Invierte hoy, asegura tranquilidad para tu familia mañana.
      </p>
    </div>
  </div>
</section>

