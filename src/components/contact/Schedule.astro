<section class="py-16">
  <div class="container mx-auto px-6 max-w-4xl">
    <div class="bg-white rounded-2xl shadow-lg p-8">
      <h2 class="text-2xl font-bold text-dark-gray text-center mb-8">Horarios</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Lunes a Viernes -->
        <div class="text-center">
          <h3 class="font-semibold text-dark-gray mb-2">Lunes a Viernes</h3>
          <p class="text-dark-gray/80">8:00am a 5:00pm</p>
        </div>
        
        <!-- Sábado -->
        <div class="text-center">
          <h3 class="font-semibold text-dark-gray mb-2">Sábado</h3>
          <p class="text-dark-gray/80">8:00am a 3:00pm</p>
        </div>
        
        <!-- Domingo -->
        <div class="text-center">
          <h3 class="font-semibold text-dark-gray mb-2">Domingo</h3>
          <p class="text-dark-gray/80">Cerrado</p>
        </div>
      </div>
      
      <div class="flex justify-center mt-8 space-x-4">
        <button class="bg-green-primary text-white px-6 py-2 rounded-lg hover:bg-green-dark transition-colors">
          Proceso de certificación
        </button>
        <button class="bg-green-primary text-white px-6 py-2 rounded-lg hover:bg-green-dark transition-colors">
          Formulario de servicios
        </button>
      </div>
    </div>
  </div>
</section>
